                .social.hide-on-small-only
                        a(href='https://www.facebook.com/stemopeenvrouw/', target='_blank')
                            i.fa.fa-facebook(aria-hidden='true')
                        a(href='https://twitter.com/StemopeenVrouw', target='_blank')
                            i.fa.fa-twitter(aria-hidden='true')
                        a(href='http://www.instagram.com/stemopeenvrouw', target='_blank')
                            i.fa.fa-instagram(aria-hidden='true')
        .container
            div(ng-app="stemVrouw")
                div(ng-controller="CandidateCtrl")
                    a(name="top")
                    // menu met alle partijen voor op mobiel
                    .row.menu.hide-on-med-and-up
                        span.menulink(ng-repeat='party in affiliation')
                            a(href="#{{party.AffiliationIdentifier.RegisteredName}}") {{party.AffiliationIdentifier.MenuName}}
                    //zoekbalk row
                    //.row
                    //    form.col.s12.m9.l10
                    //        .input-field.col.s6
                    //            i.material-icons.prefix
                    //            input#icon_prefix.validate(ng-model="search", type="text")
                    //            label(for='icon_prefix') Search

                    //row met partijen table
                    .row.section.scrollspy
                        .col.s12.m9.l10
                            .party(ng-repeat='party in affiliation', id='{{party.AffiliationIdentifier.MenuName}}')
                                a(name="{{party.AffiliationIdentifier.RegisteredName}}")
                                    h4
                                        a(href="{{party.AffiliationIdentifier.website}}", target="_blank") {{party.AffiliationIdentifier.RegisteredName}}
                                    span.number {{filtered.length}} / {{party.Candidate.length}} ( {{filtered.length/party.Candidate.length*100 | number: 0}}% ) vrouwen
                                table.table.striped
                                    | {{loading}}
                                    thead
                                        tr
                                            th Positie
                                            th Naam
                                            th Stad
                                    tbody
                                        tr(ng-repeat="candidate in party.Candidate | filter: search | filter:{ Gender: 'female'} as filtered ")
                                            td
                                                | {{candidate.CandidateIdentifier._Id}}
                                            td
                                                a.link(href="{{candidate.website}}", target="_blank") {{candidate.CandidateFullName.PersonName.FirstName.__text}} {{candidate.CandidateFullName.PersonName.NamePrefix.__text}} {{candidate.CandidateFullName.PersonName.LastName.__text}}
                                            td
                                                | {{candidate.QualifyingAddress.Locality.LocalityName.__text}}
                                a.backtotop(href="#top")
                                    button.button Terug naar boven
                        .col.hide-on-small-only.m3.l2
                            ul.table-of-contents.pinned
                                li
                                    a(href="#top") Top
                                li(ng-repeat='party in affiliation')
                                    a(href='#{{party.AffiliationIdentifier.MenuName}}') {{party.AffiliationIdentifier.MenuName}}





